<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="bibliotecamodel">
    <class name = "Bibliotecar" table="Bibliotecar">
        <id name = "id" column = "id">
            <generator class="increment"/>
        </id>
        <property name="nume" column = "nume"/>
        <property name="username" column="username" unique="true"/>
        <property name="parola" column="parola"/>
        <property name="adresa" column="adresa"/>
        <property name="CNP" column="CNP"/>
        <property name="telefon" column="telefon"/>
    </class>

</hibernate-mapping>